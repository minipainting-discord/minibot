extends layout.pug

block content
  h2 Command Log

  dl.logs
    each entry in log
      dt.date= entry.date
      dt.user(data-user-id=entry.userId)= entry.user
      dt.channel(data-channel=entry.location)= entry.channel ? "#" + entry.channel.name : "DM"
      dd!= entry.message


  style
    .
      body {
        max-width: 90%;
      }

      .logs {
        display: grid;
        grid-template-columns: 
          [date] min-content 
          [user] min-content 
          [channel] max-content 
          [command] 1fr;
        grid-column-gap: 0.8rem;
        grid-row-gap: 1.2rem;
        align-items: center;
      }

      .logs dt.date {
        text-align: center;
        font-weight: normal;
        color: rgb(54, 57, 63);
        font-size: 1.2rem;
        grid-column: date;
      }

      .logs dt.user {
        font-weight: bold;
        grid-column: user;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 15rem;
      }

      .logs dt.channel {
        grid-column: channel;
        color: rgb(74, 77, 83);
      }

      .logs dd {
        grid-column: command;
        margin: 0;
        font-family: monospace;
      }

      .logs dd mark {
        color: rgb(114, 137, 218);
        background-color: transparent;
      }
