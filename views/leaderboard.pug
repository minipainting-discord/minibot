extends layout.pug

block content
  section.leaderboard
    .col
      h2 Lifetime Leaderboard
      ul
        each result, index in scores.results
          li #{result.points} - #{scores.users[index].username}
    .col
      h2 Annual Leaderboard
      ul
        each result, index in annual.results
          li #{result.points} - #{annual.users[index].username}
